<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SmsActivity"
    android:background="#f4f0bb">


    <View
        android:layout_width="143dp"
        android:layout_height="143dp"
        android:background="@drawable/top_left_corner_oval" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/li"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="Send SOS in\nEmergency"
        android:textAlignment="center"
        android:textColor="#43291f"
        android:textSize="35sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/li"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start SMS Alerts"
            android:id="@+id/startService"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop SMS Alerts"
            android:id="@+id/stopService"/>

    </LinearLayout>

</RelativeLayout>